#!/usr/bin/env perl
use App::Cope;

sub process {
  line qr{^(?:In file included from )?([^:]+:)([^:]+:)} => 'green bold', 'green';
  line qr{^([^:]+:) (In function) (..+.):} => 'green bold', 'green', 'blue bold';
  line qr{(error:)} => 'red bold';
  line qr{(warning:)} => 'yellow bold';
  line qr{(note:)} => 'yellow';
}

chomp( my $realpath = `which g++` );
run( \&process, $realpath, @ARGV );
